<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"/>

    <ImageView
            android:src="@drawable/swooshlogo"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:id="@+id/imageView2" android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="@+id/imageView3"
    />
    <TextView
            android:text="Desired League:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textColor="@android:color/white"
            android:textSize="20sp" android:fontFamily="@font/montserrat" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4">
        <ToggleButton
                android:text="Mens"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:id="@+id/toggleButton" android:textOff="Mens" android:textOn="Mens"
                android:textColor="@android:color/white" android:fontFamily="@font/montserrat"
                android:background="@drawable/swoosh_toggle" android:textAllCaps="false" android:textSize="18sp"
                android:textStyle="bold"/>
        <ToggleButton
                android:text="Womens"
                android:layout_width="match_parent"
                android:layout_height="64dp" android:id="@+id/toggleButton2" android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" android:textOff="Womens" android:textOn="Womens"
                android:textColor="@android:color/white" android:fontFamily="@font/montserrat"
                android:background="@drawable/swoosh_toggle" android:textAllCaps="false" android:textSize="18sp"
                android:textStyle="bold"/>
        <ToggleButton
                android:text="ToggleButton"
                android:layout_width="match_parent"
                android:layout_height="64dp" android:id="@+id/toggleButton3" android:textOff="Co-Ed"
                android:textOn="Co-Ed" android:textColor="@android:color/white"
                android:background="@drawable/swoosh_toggle" android:textAllCaps="false" android:textSize="18sp"
                android:textStyle="bold"/>
    </LinearLayout>
    <Button
            android:text="NEXT"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:fontFamily="@font/montserrat"
            android:textSize="18sp" android:textColor="@android:color/white"
            android:background="@drawable/swoosh_button" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>
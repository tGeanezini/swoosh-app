<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            android:contentDescription="@string/background_image_description"/>

    <ImageView
            android:src="@drawable/swooshlogo"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:id="@+id/imageView2" android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:contentDescription="@string/app_logo_description"/>
    <TextView
            android:text="@string/desired_league_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textColor="@android:color/white"
            android:textSize="20sp" android:fontFamily="@font/montserrat" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4">
        <ToggleButton
                android:text="@string/mens_label"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:id="@+id/mensLeagueButton" android:textOff="@string/mens_label"
                android:textOn="@string/mens_label"
                android:textColor="@android:color/white" android:fontFamily="@font/montserrat"
                android:background="@drawable/swoosh_toggle" android:textAllCaps="false" android:textSize="18sp"
                android:textStyle="bold" android:onClick="onMensClicked"/>
        <ToggleButton
                android:text="@string/womens_label"
                android:layout_width="match_parent"
                android:layout_height="64dp" android:id="@+id/womensLeagueButton" android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" android:textOff="@string/womens_label"
                android:textOn="@string/womens_label"
                android:textColor="@android:color/white" android:fontFamily="@font/montserrat"
                android:background="@drawable/swoosh_toggle" android:textAllCaps="false" android:textSize="18sp"
                android:textStyle="bold" android:onClick="onWomensClicked"/>
        <ToggleButton
                android:text="@string/co_ed_label"
                android:layout_width="match_parent"
                android:layout_height="64dp" android:id="@+id/coedLeagueButton" android:textOff="@string/co_ed_label"
                android:textOn="@string/co_ed_label" android:textColor="@android:color/white"
                android:background="@drawable/swoosh_toggle" android:textAllCaps="false" android:textSize="18sp"
                android:textStyle="bold" android:onClick="onCoEdClicked"/>
    </LinearLayout>
    <Button
            android:text="@string/next_label"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:id="@+id/leagueNextButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:fontFamily="@font/montserrat"
            android:textSize="18sp" android:textColor="@android:color/white"
            android:background="@drawable/swoosh_button" android:textStyle="bold" android:onClick="leagueNextClicked"/>
</android.support.constraint.ConstraintLayout>